<!DOCTYPE html>
<html>
<head>
  <title>Lista de Productos</title>
</head>
<body>
  </header>
  <h1>Bienvenido, {{user.first_name}}!</h1>
  </header>
  <p>Apellido: {{user.last_name}}</p>
  <p>Correo: {{user.email}}</p>
  <p>Rol: {{user.role}}</p>
  <h1>Lista de Productos</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Descripción</th>
        <th>Codigo</th>
        <th>Stock</th>
        <th>Status</th>
        
      </tr>
    </thead>
    <tbody>
      {{#each payload}}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td>{{this.description}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.status}}</td>

        </tr>
      {{/each}}
    </tbody>
  </table>

<p>Página actual: {{page}} </p>

<a href="{{prevLink}}" role="button" {{#unless hasPrevPage}}disabled{{/unless}} >Anterior</a>
<a href="{{nextLink}}" role="button" {{#unless hasNextPage}}disabled{{/unless}} >Siguiente</a>

<footer>
    <a href="/api/sessions/logout" role="button">Logout</a>
</footer>


</body>
</html>
